<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
 
<!DOCTYPE joystick_config [

	<!ELEMENT joystick_config (	MENU_UP,MENU_DOWN,MENU_LEFT,MENU_RIGHT )>
	
	<!ELEMENT MENU_DOWN EMPTY >
	<!ATTLIST MENU_DOWN key ( Joy_X|Joy_Y|Joy_x|Joy_y|Joy_DC_U|Joy_DC_D|Joy_DC_L|Joy_DC_R ) #REQUIRED>

	<!ELEMENT MENU_UP EMPTY>
	<!ATTLIST MENU_UP key ID #REQUIRED>

	<!ELEMENT MENU_LEFT EMPTY >
	<!ATTLIST MENU_LEFT key ID #REQUIRED>

	<!ELEMENT MENU_RIGHT EMPTY>
	<!ATTLIST MENU_RIGHT key ID #REQUIRED>

]>

<joystick_config>
	<MENU_UP key="Joy_DC_U"/>
	<MENU_DOWN key="Joy_DC_D"/>
	<MENU_LEFT key="Joy_DC_L"/>
	<MENU_RIGHT key="Joy_DC_R"/>
</joystick_config>